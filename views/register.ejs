<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - Health Tracker</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
<div class="register-container">
    <h2>Create an Account</h2>

    <% if (errors.length > 0) { %>
        <div class="errors">
            <ul>
                <% errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                <% }) %>
            </ul>
        </div>
    <% } %>

    <form action="<%= req.baseUrl %>/register" method="POST">
        <div>
            <label for="first">First Name</label>
            <input type="text" name="first" id="first" value="<%= oldInput.first || '' %>" required>
        </div>

        <div>
            <label for="last">Last Name</label>
            <input type="text" name="last" id="last" value="<%= oldInput.last || '' %>" required>
        </div>

        <div>
            <label for="username">Username</label>
            <input type="text" name="username" id="username" value="<%= oldInput.username || '' %>" required>
        </div>

        <div>
            <label for="email">Email</label>
            <input type="email" name="email" id="email" value="<%= oldInput.email || '' %>" required>
        </div>

        <div>
            <label for="password">Password</label>
            <input type="password" name="password" id="password" required>
        </div>

        <button type="submit">Register</button>
    </form>

    <a href="<%= req.baseUrl %>/login" class="login-link">Already have an account? Login here</a>
</div>
</body>
</html>
