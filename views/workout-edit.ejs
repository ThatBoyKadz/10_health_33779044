<%- include('../partials/header') %>

<h1>Edit Workout</h1>

<form action="/workouts/edit/<%= workout.id %>" method="POST">
    
    <label>Name</label>
    <input type="text" name="name" value="<%= workout.name %>" required>

    <label>Type</label>
    <select name="type">
        <option <%= workout.type === 'Cardio' ? 'selected' : '' %>>Cardio</option>
        <option <%= workout.type === 'Strength' ? 'selected' : '' %>>Strength</option>
        <option <%= workout.type === 'Flexibility' ? 'selected' : '' %>>Flexibility</option>
        <option <%= workout.type === 'Balance' ? 'selected' : '' %>>Balance</option>
    </select>

    <label>Duration (minutes)</label>
    <input type="number" name="duration" value="<%= workout.duration %>" required>

    <label>Difficulty</label>
    <select name="difficulty">
        <option <%= workout.difficulty === 'Easy' ? 'selected' : '' %>>Easy</option>
        <option <%= workout.difficulty === 'Medium' ? 'selected' : '' %>>Medium</option>
        <option <%= workout.difficulty === 'Hard' ? 'selected' : '' %>>Hard</option>
    </select>

    <label>Calories Burned</label>
    <input type="number" name="calories_burned" value="<%= workout.calories_burned %>">

    <button type="submit">Update Workout</button>

</form>

<%- include('../partials/footer') %>
